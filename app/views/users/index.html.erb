<h1 align="center">All Users of Monolith Fundamentals</h1>
<div align='center'>
  <%= will_paginate %>
<% @users.each do |user| %>
  <ul class='listing'>
    <div class='row'>
      <div class='col-md-4 col-md-offset-4'>
      <div class='row'>
      <div class='well col-md-12 col-md-offest-12'>
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class='article-title'>
          <%= link_to user.username, user_path(user) %>
        </li>
        <% if user.admin? %>
          <li><small>Administrator</small></li>
        <% else %>
          <li><small>General User</small></li>
        <% end %>
        <li><small><%= pluralize(user.articles.count, 'article') if user.articles %></small></li>
        <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), method: :delete, class: 'btn btn-danger btn-sm delete-user-colour',
                                        data: {confirm: "Are you sure you want to delete this user and all their articles?"} %></li>
        <% end %>
      </div>
      </div>
      </div>
    </div>
  </ul>
<% end %>
  <%= will_paginate %>
</div>